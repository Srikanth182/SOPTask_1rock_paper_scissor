<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player-1 name" />

    <EditText
        android:id="@+id/ename_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_1"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ename_1"
        android:text="Enter Player-2 name" />

    <EditText
        android:id="@+id/ename_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_2"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/enter_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_1"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/ename_1"
        android:background="@android:color/transparent"
        android:text="Enter" />

    <Button
        android:id="@+id/enter_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_2"
        android:layout_toRightOf="@id/ename_2"
        android:background="@android:color/transparent"
        android:text="enter" />

    <TextView
        android:id="@+id/rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ename_2"
        android:text="Enter number of rounds" />

    <EditText
        android:id="@+id/erounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rounds"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/erounds"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Play" />

    <TextView
        android:id="@+id/player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play"
        android:text="Player-1" />

    <TextView
        android:id="@+id/player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="175dp"
        android:layout_marginRight="10dp"
        android:text="Player-2"
        tools:layout_below="@id/play" />

    <Button
        android:id="@+id/round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scissor_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:text="Round:1" />

    <TextView
        android:id="@+id/score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scissor_1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="Score:0" />

    <TextView
        android:id="@+id/score_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scissor_2"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Score:0" />

    <Button
        android:id="@+id/newgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/round"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="New game" />

    <ImageButton
        android:id="@+id/rock_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/player_1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rock" />

    <ImageButton
        android:id="@+id/paper_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/rock_1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/paper" />

    <ImageButton
        android:id="@+id/scissor_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/paper_1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/scissor" />

    <ImageButton
        android:id="@+id/rock_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/player_2"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rock" />

    <ImageButton
        android:id="@+id/paper_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/rock_2"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/paper" />

    <ImageButton
        android:id="@+id/scissor_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/paper_2"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/scissor" />
</RelativeLayout>